<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="383dp"
        android:layout_height="241dp"
        android:background="#3da19e9e"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_marginStart="124dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="00"
            android:textColor="@android:color/background_dark"
            android:textSize="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="68dp"
            android:layout_height="38dp"
            android:layout_marginTop="40dp"
            android:text="℃"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="383dp"
        android:layout_height="272dp"
        android:background="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="352dp"
            android:layout_height="66dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/power"
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_light"
                android:onClick="setButton_power_onclick"
                android:text="开关"
                android:textSize="24sp" />

            <Button
                android:id="@+id/mode"
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_light"
                android:onClick="setButton_mode_onclick"
                android:text="模式"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="352dp"
            android:layout_height="66dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableRow2">

            <Button
                android:id="@+id/speed"
                android:layout_width="117.3dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_light"
                android:onClick="setButton_speed_onclick"
                android:text="风速"
                android:textSize="18sp" />

            <Button
                android:id="@+id/direction"
                android:layout_width="117.3dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_light"
                android:onClick="setButton_dir_onclick"
                android:text="风向"
                android:textSize="18sp" />

            <Button
                android:id="@+id/swing"
                android:layout_width="117.3dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_light"
                android:onClick="setButton_swing_onclick"
                android:text="扫风"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="352dp"
            android:layout_height="66dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableRow">

            <Button
                android:id="@+id/minus"
                android:layout_width="117.3dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_light"
                android:onClick="setButton_minus_onclick"
                android:text="-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/tit"
                android:layout_width="117.3dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_light"
                android:text="温度"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add"
                android:layout_width="117.3dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_light"
                android:onClick="setButton_add_onclick"
                android:text="+"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="352dp"
            android:layout_height="66dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableRow3">

            <Button
                android:id="@+id/timing"
                android:layout_width="117.3dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_light"
                android:onClick="setButton_timing_onclick"
                android:text="定时"
                android:textSize="18sp" />

            <Button
                android:id="@+id/sleep"
                android:layout_width="117.3dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_light"
                android:onClick="setButton_sleep_onclick"
                android:text="睡眠"
                android:textSize="18sp" />

            <Button
                android:id="@+id/brainpower"
                android:layout_width="117.3dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_light"
                android:onClick="setButton_bra_onclick"
                android:text="智能遥控"
                android:textSize="18sp" />
        </TableRow>
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/study_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:onClick="setButton_study_temp_onclick"
        android:text="学习"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>